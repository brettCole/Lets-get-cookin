    <h1 class="ui centered header">Please sign up</h1>
    <%= form_for @user, :html => { :class => "ui form" } do |f| %>
      <div class="ui raised text container segment">
        <div class="required fluid field">
            <%= f.label :name %>
            <%= f.text_field :name %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :email %>
            <%= f.text_field :email %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :password %>
            <%= f.password_field :password %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %><br><br>
        </div>
          <%= f.submit :class => "ui teal huge submit button fluid" %>
      </div>
    <% end %>
