    <h1 class="ui centered header">Please sign up</h1>
    <%= form_for @user, :html => { :class => "ui form" } do |f| %>
      <div class="ui raised text container segment">
        <div class="required fluid field">
            <%= f.label :name %>
            <%= f.text_field :name, :placeholder => "Name" %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :email %>
            <%= f.text_field :email, :placeholder => "example@gmail.com" %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :password %>
            <%= f.password_field :password, :placeholder => "*****" %><br><br>
        </div>
        <div class="required fluid field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, :placeholder => "*****" %><br><br>
        </div>
          <%= f.submit 'Create User', :class => "ui teal huge submit button fluid" %>
      </div>
    <% end %>
