<button class="ui twitter icon massive button">
  <%= link_to ("<i class='twitter icon'></i>").html_safe, '/auth/twitter' %>
</button>

<button class="ui facebook icon massive button">
  <%= link_to ("<i class='facebook icon'></i>").html_safe, '/auth/facebook' %>
</button>

<h1 class="ui centered header">Please sign up</h1>
<%= form_for @user, :html => { :class => "ui form" } do |f| %>
  <% if @user.errors.any? %>
  <div class="ui red message">
    <h2><%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="ui raised text container segment">
  <div class="required fluid field field_with_errors">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Name" %><br><br>
  </div>
  <div class="required fluid field field_with_errors">
    <%= f.label :email %>
    <%= f.email_field :email, :placeholder => "example@gmail.com" %><br><br>
  </div>
  <div class="required fluid field field_with_errors">
    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => "*****" %><br><br>
  </div>
  <div class="required fluid field field_with_errors">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :placeholder => "*****" %><br><br>
  </div>
    <%= f.submit 'Create User', :class => "ui teal huge submit button fluid" %>
</div>
<% end %>
<div class="ui raised text container segment">
  <h1 class="ui centered header">If already a user please <%= link_to "sign in!", new_session_path %></h1>
</div>
