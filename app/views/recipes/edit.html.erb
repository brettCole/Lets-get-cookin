<%= form_for @recipe, :html => { :class => "ui form" } do |f| %>
  <div class="ui raised text container segment">

    <%= render 'recipe_form', f: f %>

      <%= f.fields_for :ingredients do |i| %>
          <div class="fluid field">
            <%= i.label :quantity %>
            <input type="text" name="recipe[ingredients_attributes][<%= i.index %>][quantity]" placeholder="<%= @recipe.recipe_ingredients(quantity: params[:quantity]) %>" /><br>
            <%# binding.pry %>

            <%= i.label "Ingredient #{ i.index + 1 }" %>
            <%= i.text_field :name %>
          </div>
      <% end %>

      <%= f.submit 'Edit Recipe', :class => "ui teal huge submit button fluid" %>
  </div>
<% end %>
