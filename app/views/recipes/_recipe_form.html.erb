<div class="required fluid field">
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => "Spider Goulash"  %><br><br>
</div>
<div class="required fluid field">
    <%= f.label :description %>
    <%= f.text_area :description %><br><br>
</div>
<div class="fluid field">
    <%= f.label :prep_time %>
    <%= f.text_field :prep_time %><br><br>
</div>
<div class="fluid field">
    <%= f.label :cook_time %>
    <%= f.text_field :cook_time, :placeholder => "20 mins" %><br><br>
</div>
<div class="required fluid field">
    <%= f.label :directions %>
    <%= f.text_area :directions %><br><br>
</div>
<div class="inline fields">
    <%= f.label :vegan %>
    <%= f.check_box :vegan %>

    <%= f.label :gluten_free %>
    <%= f.check_box :gluten_free %>
</div>

<div class="field required">
  <%= label_tag "Ingredients" %>
</div>
