<div class="ui tiny image item">
  <%= link_to image_tag("Twitter_Logo_White_On_Blue.svg"), '/auth/twitter' %>
</div>
<div class="ui tiny image item">
  <%= link_to image_tag("FB-fLogo_2017.svg"), '/auth/facebook' %>
</div>
<h1 class="ui centered header">Please sign in</h1>
<%= form_tag sessions_path, { :class => "ui form" } do %>
  <div class="ui raised text container segment">
    <div class="required fluid field field_with_errors">
        <%= label_tag :email %><br>
        <%= email_field_tag 'email', nil, placeholder: 'example@gmail.com' %><br><br>
    </div>
    <div class="required fluid field field_with_errors">
        <%= label_tag :password %><br>
        <%= password_field_tag 'password', nil, placeholder: '*****' %><br><br>
    </div>
      <%= submit_tag 'Login', :class => "ui teal huge submit button fluid" %>
  </div>
<% end %>
<div class="ui raised text container segment">
  <h1 class="ui centered header">If new to us please <%= link_to "create account!", new_user_path %></h1>
</div>
