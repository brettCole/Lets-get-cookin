<!DOCTYPE html>
<html>
  <head>
    <title>LetsGetCookin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to "Lets Get Cookin", root_path %></h1>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "ui floating red message" %>
    <% end %>

    <%= yield %>

  </body>
</html>
